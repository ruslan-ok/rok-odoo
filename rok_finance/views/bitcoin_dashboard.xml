<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Bitcoin dashboard in FINANCE group -->
    <record id="dashboard_bitcoin" model="spreadsheet.dashboard">
        <field name="name">Bitcoin</field>
        <field name="spreadsheet_binary_data" type="base64" file="rok_finance/static/dashboard/bitcoin_dashboard.json"/>
        <!-- Keep empty to avoid checking virtual models in _dashboard_is_empty -->
        <field name="main_data_model_ids" eval="[(6, 0, [])]"/>
        <field name="dashboard_group_id" ref="spreadsheet_dashboard.spreadsheet_dashboard_group_finance"/>
        <field name="group_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="sequence">60</field>
        <field name="is_published">True</field>
    </record>

</odoo>


