<odoo>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form.inherit.health</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//field[@name='type']" position="after">
                <field name="weight" string="Weight, grams"/>
                <field name="volume" string="Volume, pieces"/>
                <field name="kcal_100g" string="Energy, kcal/100g"/>
            </xpath>
        </field>
    </record>
</odoo>
