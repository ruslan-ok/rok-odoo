<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="calories_rule_own" model="ir.rule">
            <field name="name">Calories: own records</field>
            <field name="model_id" ref="model_calories"/>
            <field name="domain_force">[("user_id", "=", user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="calories_rule_admin_all" model="ir.rule">
            <field name="name">Calories: admin access to all</field>
            <field name="model_id" ref="model_calories"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>
