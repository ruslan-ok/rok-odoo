<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_rok_notification" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.rok.notification</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Telegram">
                    <group>
                        <field name="telegram_chat_id" password="True"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

