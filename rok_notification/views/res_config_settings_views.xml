<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_rok_notification" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.rok.notification</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="calendar.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='calendar']" position="inside">
                <setting string="Telegram Bot Token" help="Token used by the Telegram bot for Calendar notifications.">
                    <field name="telegram_token" password="True"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>

