<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="warranty_product_template_view_tree" model="ir.ui.view">
        <field name="name">warranty.product.template.view.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="activity_exception_decoration" position="after">
                <field name="warranty_end_date" string="Warranty End Date" decoration-muted="not warranty_is_active"/>
            </field>
        </field>
    </record>

    <record id="warranty_product_template_search_view" model="ir.ui.view">
        <field name="name">warranty.product.template.search.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='favorites']" position="after">
                <filter name="warranty" string="Warranty" domain="[('warranty_is_active', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record id="warranty_product_template_form_view" model="ir.ui.view">
        <field name="name">warranty.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page
                    string="Warranty"
                    name="warranty"
                    invisible="type in ['service', 'combo']"
                >
                    <group>
                        <field name="warranty_months"/>
                        <field name="warranty_start_date"/>
                        <field name="warranty_end_date"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>