<odoo>
  <record id="view_users_form_file_manager_path" model="ir.ui.view">
    <field name="name">res.users.form.file_manager.path</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='login']" position="after">
        <label for="file_manager_path" class="col-form-label">Path to Manage Files</label>
        <field name="file_manager_path"/>
      </xpath>
    </field>
  </record>
</odoo>