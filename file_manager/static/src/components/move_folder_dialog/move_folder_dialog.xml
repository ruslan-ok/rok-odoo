<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="file_manager.MoveFolderDialog">
        <Dialog size="size" title.translate="Move a Folder">
            <t t-if="props.fileManagerFolder.data.display_name">
                <t t-out="this.moveFolderLabel"/>
            </t>
            <t t-else="">
                Move the untitled folder under:
            </t>
            <SelectMenu
                togglerClass="'o_file_manager_select_menu'"
                menuClass="'o_file_manager_select_menu_dropdown'"
                class="'o_file_manager_select_menu'"
                onInput.bind="fetchValues"
                onSelect.bind="selectFolder"
                groups="state.selectionDisplayGroups"
            >
                <span class="fw-lighter" t-ref="togglerRef">
                    <img
                        t-if="state.selectedParentFolder.value and state.selectedParentFolder.value.parentFolderId === 'private'"
                        class="rounded-circle me-1"
                        t-att-src="this.loggedUserPicture"
                    />
                    <t t-out="state.selectedParentFolder.label || this.placeholderLabel"/>
                </span>
                <t t-set-slot="choice" t-slot-scope="choice">
                    <span>
                        <img
                            t-if="choice.data.value and choice.data.value.parentFolderId === 'private'"
                            class="rounded me-1"
                            t-att-src="this.loggedUserPicture"
                        />
                        <t t-out="choice.data.label"/>
                        <span t-if="choice.data.value and choice.data.value.rootFolderName" class="text-muted small">
                            - <t t-out="choice.data.value.rootFolderName"/>
                        </span>
                    </span>
                </t>

            </SelectMenu>
            <t t-set-slot="footer">
                <button t-attf-class="btn btn-primary #{!this.state.selectedParentFolder ? 'disabled' : ''}" t-on-click="confirmFolderMove">
                    Move Folder
                </button>
                <button class="btn btn-secondary" t-on-click="props.close">
                    Cancel
                </button>
            </t>
        </Dialog>
    </t>
</templates>
