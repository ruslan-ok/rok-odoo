<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="passwords_view_tree" model="ir.ui.view">
        <field name="name">passwords.view.list</field>
        <field name="model">passwords</field>
        <field name="arch" type="xml">
            <list string="Passwords" class="passwords-tree-view">
                <field name="is_favorite" widget="boolean_favorite" class="me-3" nolabel="1"/>
                <field name="title"/>
                <field name="login" widget="list_password"/>
                <field name="value" widget="list_password"/>
                <field name="categ_id" optional="hide" />
                <field name="password_tag_ids" widget="many2many_tags" readonly="1" optional="hide" options="{'color_field': 'color'}"/>
                <field name="info" widget="rok_html"/>
            </list>
        </field>
    </record>

    <record id="passwords_view_form" model="ir.ui.view">
        <field name="name">passwords.view.form</field>
        <field name="model">passwords</field>
        <field name="arch" type="xml">
            <form string="Password">
                <header>
                    <button class="oe_stat_button"
                        name="action_view_password_history"
                        icon="fa-history"
                        type="object"
                        invisible="password_history_count == 0">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text ms-2"> History</span>
                            <span class="o_stat_value ms-2"><field name="password_history_count"/></span>
                        </div>
                    </button>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="title" string="Password"/>
                        <h2>
                            <div class="d-flex">
                                <field name="is_favorite" widget="boolean_favorite" class="me-3" nolabel="1"/>
                                <field class="text-break" name="title" options="{'line_breaks': False}" widget="text" placeholder="e.g. example.com"/>
                            </div>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="login" widget="CopyClipboardChar"/>
                            <field name="categ_id" string="Category"/>
                            <field name="website" />
                        </group>
                        <group class="align-items-center">
                            <field name="value" placeholder="************" widget="form_password"/>
                            <field name="password_tag_ids" widget="many2many_tags" context="{'password_id': id}" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <label for="info" string="Comments" class="o_form_label"/>
                    <field name="info"/>
                </sheet>
                <div class="o_attachment_preview"/>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Password History Views -->
    <record id="password_history_view_tree" model="ir.ui.view">
        <field name="name">password.history.view.list</field>
        <field name="model">password.history</field>
        <field name="arch" type="xml">
            <list string="Password History">
                <field name="password_id"/>
                <field name="value" widget="password"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <record id="password_history_view_form" model="ir.ui.view">
        <field name="name">password.history.view.form</field>
        <field name="model">password.history</field>
        <field name="arch" type="xml">
            <form string="Password History">
                <sheet>
                    <group>
                        <field name="password_id"/>
                        <field name="value" widget="password"/>
                        <field name="create_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="password_history_action" model="ir.actions.act_window">
        <field name="name">Password History</field>
        <field name="res_model">password.history</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="password_history_view_tree"/>
    </record>

    <record id="passwords_action" model="ir.actions.act_window">
        <field name="name">Passwords</field>
        <field name="res_model">passwords</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="passwords_view_tree"/>
    </record>

    <record id="password_view_search_catalog" model="ir.ui.view">
        <field name="name">password.view.search.catalog</field>
        <field name="model">passwords</field>
        <field name="arch" type="xml">
            <search string="Password">
                <!-- Search field -->
                <field name="title"
                    string="Password record (any field)"
                    filter_domain="['|', '|', '|', ('title', 'ilike', self), ('login', 'ilike', self), ('value', 'ilike', self), ('info', 'ilike', self)]"/>
                <!-- Filter -->
                <filter string="Favorites" name="favorites" domain="[('is_favorite', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <!-- Group By -->
                <filter string="Password Login" name="login" context="{'group_by':'login'}"/>
                <!-- searchpanel -->
                <searchpanel>
                    <field name="categ_id"
                        string="Password Category"
                        icon="fa-th-list"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <menuitem
        id="passwords_menu_root"
        name="Passwords"
        web_icon="password_manager,static/description/icon.png"
        sequence="300"/>

    <menuitem
        id="passwords_menu_home"
        name="Password Manager"
        parent="passwords_menu_root"
        action="password_manager.passwords_action"
        sequence="1"/>

</odoo>
