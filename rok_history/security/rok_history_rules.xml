<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="rule_rok_history_event_own" model="ir.rule">
            <field name="name">History events: own records</field>
            <field name="model_id" ref="model_rok_history_event"/>
            <field name="domain_force">[("user_id", "=", user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="rule_rok_history_fact_own" model="ir.rule">
            <field name="name">History facts: own records</field>
            <field name="model_id" ref="model_rok_history_fact"/>
            <field name="domain_force">[("user_id", "=", user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="rule_rok_history_event_admin_all" model="ir.rule">
            <field name="name">History events: admin access to all</field>
            <field name="model_id" ref="model_rok_history_event"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
        <record id="rule_rok_history_fact_admin_all" model="ir.rule">
            <field name="name">History facts: admin access to all</field>
            <field name="model_id" ref="model_rok_history_fact"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>
