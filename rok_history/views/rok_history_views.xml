    <record id="action_rok_history" model="ir.actions.act_window">
        <field name="name">Event</field>
        <field name="res_model">rok.history.event</field>
        <field name="view_mode">list,form</field>
        <field name="views" eval="[(ref('view_rok_history_event_list'), 'list'), (ref('view_rok_history_event_form'), 'form')]"/>
        <!-- <field name="search_view_id" ref="view_rok_history_event_search"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first event</p>
        </field>
    </record>

    <menuitem id="menu_rok_history_root" name="History" web_icon="rok_history,static/description/icon.png" action="action_rok_history" sequence="10" groups="base.group_user"/>
