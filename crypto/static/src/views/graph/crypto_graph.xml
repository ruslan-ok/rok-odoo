<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="crypto.CryptoGraphView.Buttons">
        <div class="btn-group" role="toolbar" aria-label="Main actions">
            <ReportViewPeriods
                periods="model.metaData.periods"
                period="model.metaData.period"
                onPeriodSelected.bind="this.onPeriodSelected"
            />
        </div>
    </t>

    <t t-name="crypto.CryptoGraphRenderer" t-inherit="web.GraphRenderer" t-inherit-mode="primary">
        <xpath expr="//div[@t-ref='container']" position="replace">
            <div class="o_graph_canvas_container flex-grow-1 position-relative px-3 pb-3" t-ref="container">
                <Crypto chart_data="state.data" />
            </div>
        </xpath>
    </t>

</templates>
