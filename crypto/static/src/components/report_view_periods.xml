<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="crypto.ReportViewPeriods">
        <Dropdown>
            <button class="btn btn-primary">
                Period: <t t-out="props.periods.find(p => p.id == props.period).title" /> <i class="fa fa-caret-down ms-1"/>
            </button>
            <t t-set-slot="content">
                <t t-foreach="props.periods" t-as="period" t-key="period.id">
                    <DropdownItem
                        class="{ selected: props.period == period.id }"
                        t-esc="period.title"
                        onSelected="() => this.props.onPeriodSelected(period.id)"
                    />
                </t>
            </t>
        </Dropdown>
    </t>

</templates>
