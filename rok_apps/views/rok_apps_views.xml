<odoo>

    <record id="rok_apps_view_list" model="ir.ui.view">
        <field name="name">rok.apps.view.list</field>
        <field name="model">rok.apps</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="icon"/>
                <field name="active"/>
                <field name="sequence"/>
            </list>
        </field>
    </record>

    <record id="rok_apps_view_kanban" model="ir.ui.view">
        <field name="name">rok.apps.view.kanban</field>
        <field name="model">rok.apps</field>
        <field name="arch" type="xml">
            <kanban create="false" class="rok_apps_kanban_2">
                <field name="name"/>
                <templates>
                    <t t-name="card">
                        <RokAppsWidget t-att-record="record"/>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="rok_apps_action" model="ir.actions.act_window">
        <field name="name">Rok Apps</field>
        <field name="res_model">rok.apps</field>
        <field name="view_mode">kanban,list</field>
        <field name="view_id" ref="rok_apps_view_kanban"/>
    </record>

    <menuitem
        id="rok_apps_menu_root"
        name="Rok Apps"
        web_icon="rok_apps,static/description/icon.png"
        sequence="2"/>

    <menuitem
        id="rok_apps_menu_dashboard"
        name="Dashboard"
        parent="rok_apps_menu_root"
        action="rok_apps.rok_apps_action"
        sequence="1"/>
</odoo>
