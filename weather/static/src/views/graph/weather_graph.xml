<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="weather.WeatherGraphView.Buttons">
        <WeatherToolbar toolbar_data="state.toolbar_data" onLocationSelected.bind="onLocationSelected" onSetLocality.bind="onSetLocality" onPeriodSelected.bind="onPeriodSelected" />
    </t>

    <t t-name="weather.WeatherGraphRenderer" t-inherit="web.GraphRenderer" t-inherit-mode="primary">
        <xpath expr="//div[@t-ref='container']" position="replace">
            <Weather period="state.toolbar_data.period" error="state.error" title="title" data="state.data" />
        </xpath>
    </t>

</templates>
