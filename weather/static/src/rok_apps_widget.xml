<templates>
    <t t-name="weather.RokAppsWidget">
        <div class="rok_apps_widget weather_widget">
            <div class="weather_buttons_container">
                <div class="btn-group" role="toolbar" aria-label="Select location">
                    <span class="fs-4 me-2 pt-1 label">Location:</span>
                    <button class="btn btn-secondary bi bi-crosshair o_graph_button" data-tooltip="Use browser location" aria-label="Use browser location" data-mode="browser"
                        t-on-click="() => this.onLocationSelected('browser')"
                        t-att-class="{ active: state.location === 'browser' }"
                    />
                    <button class="btn btn-secondary bi bi-geo-alt o_graph_button" data-tooltip="Use the name of the locality" aria-label="Use the name of the locality" data-mode="locality"
                        t-on-click="() => this.onLocationSelected('locality')"
                        t-att-class="{ active: state.location === 'locality' }"
                    />
                    <input class="locality-name" type="text" name="locality" t-ref="localityInput"
                        t-att-value="state.locality or ''"
                        t-if="state.location === 'locality'"
                    />
                    <button class="btn btn-secondary bi bi-search o_graph_button" data-tooltip="Search" aria-label="Search" data-mode="search"
                        t-on-click="() => this.onSetLocality()"
                        t-if="state.location === 'locality'"
                    />
                </div>
                <div class="btn-group" role="toolbar" aria-label="Change forecast parameters">
                    <span class="fs-4 ms-2 me-2 pt-1 label">Period:</span>
                    <button class="btn btn-secondary bi bi-cloud-snow o_graph_button" data-tooltip="Now" aria-label="Now" data-mode="now"
                        t-on-click="() => this.onPeriodSelected('now')"
                        t-att-class="{ active: state.period === 'now' }"
                    />
                    <button class="btn btn-secondary bi bi-calendar4-event o_graph_button" data-tooltip="Day" aria-label="Day" data-mode="day"
                        t-on-click="() => this.onPeriodSelected('day')"
                        t-att-class="{ active: state.period === 'day' }"
                    />
                    <button class="btn btn-secondary bi bi-calendar4-week o_graph_button" data-tooltip="Week" aria-label="Week" data-mode="week"
                        t-on-click="() => this.onPeriodSelected('week')"
                        t-att-class="{ active: state.period === 'week' }"
                    />
                </div>
            </div>
            <div class="flex-grow-1">
                <Weather period="state.period" error="state.error" title="title" data="state.data" />
            </div>
        </div>
    </t>
</templates>
