<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="weather.FormLocation">
        <div class="right location-form">
            <input class="location-name" type="text" name="location" t-ref="locationInput" t-att-value="props.location or ''" />
            <button class="location-btn" type="button" t-on-click="save">Go</button>
            <input class="location-cb" type="checkbox" name="use-browser-location" t-att-checked="props.useBrowserLocation" t-on-change="toggleBrowserLocation" />
        </div>
    </t>
</templates>

