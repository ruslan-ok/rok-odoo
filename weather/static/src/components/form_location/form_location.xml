<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="weather.FormLocation">
        <div class="right location-form">
            <input class="location-name" type="text" name="location" t-out="state.location" />
            <button class="location-btn" type="button" t-on-click="props.save">Go</button>
            <input class="location-cb" type="checkbox" name="use-browser-location" t-att-checked="props.useBrowserLocation" t-att-onChange="props.onChangeBrowserLocation" />
        </div>
    </t>
</templates>

