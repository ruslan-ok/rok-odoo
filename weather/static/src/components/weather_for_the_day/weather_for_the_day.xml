<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="weather.WeatherForTheDay">
        <div class='weather-day period-container'>
            <table class="table table-borderles">
                <tbody>
                    <tr>
                        <td t-foreach="days" t-as="day" t-key="day.key" t-att-class="day.class" t-out="day.name" />
                    </tr>
                    <tr>
                        <td t-foreach="hours" t-as="hour" t-key="hour.key" t-att-class="hour.class">
                            <t t-out="hour.name" />
                            <sup t-if="hour.name" class="time-sup">00</sup>
                        </td>
                    </tr>
                    <tr>
                        <td t-foreach="icons" t-as="icon" t-key="icon.key" t-att-class="icon.class">
                            <div t-if="icon.href" class='hours-icon'>
                                <img class="weather-icon" t-att-src="icon.href" alt="Weather icon"/>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td t-foreach="titlesTemp" t-as="title" t-key="title.key" t-att-class="title.class">
                            <span t-if="title.name" class="subtitle-backgr" t-out="title.name" />
                        </td>
                    </tr>
                    <tr>
                        <td t-foreach="tempBars" t-as="tempBar" t-key="tempBar.key" t-att-class="tempBar.class">
                            <div class='top' t-att-style="tempBar.topStyle" />
                            <div class='mid' t-att-style="tempBar.midStyle" />
                            <div class='bot overflow-td' t-att-style="tempBar.botStyle" t-out="tempBar.avgTemp" />
                        </td>
                    </tr>
                    <tr>
                        <td t-foreach="titlesWind" t-as="title" t-key="title.key" t-att-class="title.class">
                            <span t-if="title.name" class="subtitle-backgr" t-out="title.name" />
                        </td>
                    </tr>
                    <tr>
                        <td t-foreach="winds" t-as="wind" t-key="wind.key" t-att-class="wind.class" t-att-style="wind.valueStyle">
                            <t t-out="wind.value" />
                            <i class="bi bi-arrow-up wind-icon" t-att-style="wind.directionStyle" />
                        </td>
                    </tr>
                    <tr>
                        <td t-foreach="titlesPreci" t-as="title" t-key="title.key" t-att-class="title.class">
                            <span t-if="title.name" class="subtitle-backgr" t-out="title.name" />
                        </td>
                    </tr>
                    <tr>
                        <td t-foreach="precipitation" t-as="preci" t-key="preci.key" t-att-class="preci.class">
                            <div class='hour-preci'>
                                <div class='value' t-att-style="preci.valueStyle" t-out="preci.value" />
                                <div class='bar' t-att-style="preci.heightStyle" />
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
</templates>

