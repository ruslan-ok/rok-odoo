<odoo>
  <record id="view_users_form_filestore_path" model="ir.ui.view">
    <field name="name">res.users.form.filestore.path</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='login']" position="after">
        <label for="filestore_path" class="col-form-label">Filestore Path</label>
        <field name="filestore_path"/>
      </xpath>
    </field>
  </record>
</odoo>