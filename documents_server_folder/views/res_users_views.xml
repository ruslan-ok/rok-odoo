<odoo>
    <record id="view_users_form_file_manager_path" model="ir.ui.view">
        <field name="name">res.users.form.file_manager.path</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <group>
                    <field name="server_folder_path"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>