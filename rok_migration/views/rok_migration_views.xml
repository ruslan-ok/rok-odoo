<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="menu_rok_migration"
        name="Migration"
        parent="base.menu_administration"
        sequence="100"/>

    <menuitem id="menu_rok_migration_actions"
        name="Migration Actions"
        parent="menu_rok_migration"
        sequence="10"/>

    <!-- <menuitem id="menu_run_migration"
        name="Migration Tool"
        parent="menu_rok_migration_actions"
        action="action_rok_migration_form"
        sequence="10"/> -->

    <!-- Migration Root Views -->
    <record id="view_rok_migration_root_list" model="ir.ui.view">
        <field name="name">rok.migration.root.list</field>
        <field name="model">rok.migration.root</field>
        <field name="arch" type="xml">
            <list string="Migration Roots">
                <field name="model_id"/>
                <field name="model"/>
                <field name="loaded_count"/>
                <field name="migrated_count"/>
            </list>
        </field>
    </record>

    <record id="view_rok_migration_root_form" model="ir.ui.view">
        <field name="name">rok.migration.root.form</field>
        <field name="model">rok.migration.root</field>
        <field name="arch" type="xml">
            <form string="Migration Root">
                <sheet>
                    <group>
                        <field name="model_id"/>
                        <field name="model"/>
                        <field name="loaded_count"/>
                        <field name="migrated_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Server Action for Clear -->
    <record id="action_server_clear" model="ir.actions.server">
        <field name="name">Clear</field>
        <field name="sequence">10</field>
        <field name="model_id" ref="model_rok_migration_root"/>
        <field name="binding_model_id" ref="model_rok_migration_root"/>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_clear()
        </field>
    </record>

    <!-- Server Action for Load -->
    <record id="action_server_load" model="ir.actions.server">
        <field name="name">Load</field>
        <field name="sequence">20</field>
        <field name="model_id" ref="model_rok_migration_root"/>
        <field name="binding_model_id" ref="model_rok_migration_root"/>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_load()
        </field>
    </record>

    <!-- Server Action for Migrate -->
    <record id="action_server_migrate" model="ir.actions.server">
        <field name="name">Migrate</field>
        <field name="sequence">30</field>
        <field name="model_id" ref="model_rok_migration_root"/>
        <field name="binding_model_id" ref="model_rok_migration_root"/>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_migrate()
        </field>
    </record>

    <record id="action_rok_migration_root" model="ir.actions.act_window">
        <field name="name">Migration Roots</field>
        <field name="res_model">rok.migration.root</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Migration Root
            </p>
            <p>
                Define root models that should be migrated from the source database.
            </p>
        </field>
    </record>

    <menuitem id="menu_migration_roots"
        name="Migration Roots"
        parent="menu_rok_migration_actions"
        action="action_rok_migration_root"
        sequence="20"/>

</odoo>
