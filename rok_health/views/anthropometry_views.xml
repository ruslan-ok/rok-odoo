<odoo>
    <record id="anthropometry_view_graph" model="ir.ui.view">
        <field name="name">anthropometry.view.graph</field>
        <field name="model">rok.health.anthropometry</field>
        <field name="arch" type="xml">
            <graph string="Weight" js_class="anthropometry_graph">
                <field name="measurement" type="row"/>
                <field name="weight" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="anthropometry_view_list" model="ir.ui.view">
        <field name="name">anthropometry.view.list</field>
        <field name="model">rok.health.anthropometry</field>
        <field name="arch" type="xml">
            <list string="Anthropometry" default_order="measurement desc">
                <field name="measurement"/>
                <field name="height"/>
                <field name="weight"/>
                <field name="waist"/>
                <field name="temperature"/>
                <field name="systolic"/>
                <field name="diastolic"/>
                <field name="pulse"/>
                <field name="info"/>
            </list>
        </field>
    </record>

    <record id="anthropometry_view_form" model="ir.ui.view">
        <field name="name">anthropometry.view.form</field>
        <field name="model">rok.health.anthropometry</field>
        <field name="arch" type="xml">
            <form string="Anthropometry">
                <sheet>
                    <group>
                        <group>
                            <field name="measurement"/>
                            <field name="height"/>
                            <field name="weight"/>
                            <field name="waist"/>
                        </group>
                        <group>
                            <field name="temperature"/>
                            <field name="systolic"/>
                            <field name="diastolic"/>
                            <field name="pulse"/>
                        </group>
                        <group>
                            <field name="info"/>
                        </group>
                        <field name="user_id" invisible="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="anthropometry_view_search" model="ir.ui.view">
        <field name="name">anthropometry.view.search</field>
        <field name="model">rok.health.anthropometry</field>
        <field name="arch" type="xml">
            <search>
                <field name="measurement"/>
                <separator/>
                <filter name="period_last_week" string="Last Week" domain="[('measurement','>=',(datetime.datetime.combine(context_today() - relativedelta(days=7), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <filter name="period_last_month" string="Last Month" domain="[('measurement','>=',(datetime.datetime.combine(context_today() - relativedelta(months=1), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <filter name="period_last_year" string="Last Year" domain="[('measurement','>=',(datetime.datetime.combine(context_today() - relativedelta(years=1), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <filter name="period_last_5_years" string="Last 5 Years" domain="[('measurement','>=',(datetime.datetime.combine(context_today() - relativedelta(years=5), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]"/>
            </search>
        </field>
    </record>

    <record id="anthropometry_action_view_graph" model="ir.actions.act_window">
        <field name="name">Anthropometry</field>
        <field name="res_model">rok.health.anthropometry</field>
        <field name="view_mode">graph,list,form</field>
        <field name="views" eval="[(ref('anthropometry_view_graph'), 'graph'), (ref('anthropometry_view_list'), 'list'), (ref('anthropometry_view_form'), 'form')]"/>
        <field name="search_view_id" ref="anthropometry_view_search"/>
        <field name="context">{'graph_measure': 'weight', 'graph_date': 'measurement'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first measurement</p>
        </field>
    </record>

    <menuitem
        id="anthropometry_menu_action"
        name="Anthropometry"
        parent="rok_apps.rok_apps_menu_root"
        action="anthropometry_action_view_graph"
        sequence="40"
        groups="base.group_user"/>
</odoo>
