<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- New HEALTH group to display above FINANCE -->
    <record id="spreadsheet_dashboard_group_health" model="spreadsheet.dashboard.group">
        <field name="name">Health</field>
        <field name="sequence">250</field>
    </record>

    <!-- Anthropometry dashboard (list + link to graph via odoo://) -->
    <record id="dashboard_anthropometry" model="spreadsheet.dashboard">
        <field name="name">Anthropometry</field>
        <field name="spreadsheet_binary_data" type="base64" file="rok_health/static/dashboard/anthropometry_dashboard.json"/>
        <field name="main_data_model_ids" eval="[(4, ref('rok_health.model_rok_health_anthropometry'))]"/>
        <field name="dashboard_group_id" ref="rok_health.spreadsheet_dashboard_group_health"/>
        <field name="group_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="sequence">10</field>
        <field name="is_published">True</field>
    </record>

</odoo>


