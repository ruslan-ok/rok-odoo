<templates>
    <t t-name="rok_health.Anthropometry">
        <div class="anthropometry_chart_container" t-ref="container" id="anthropometry">
            <t t-if="props.error" >
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading"><i class="fa fa-times-circle me-2"></i>Error</h4>
                    <hr/>
                    <p><t t-out="props.error" /></p>
                </div>
            </t>
            <t t-else="">
                <canvas t-ref="canvas" class="p-2"/>
            </t>
        </div>
    </t>
</templates>
